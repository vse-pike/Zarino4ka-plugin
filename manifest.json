{
  "manifest_version": 3,
  "name": "Zarino4ka Plugin",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["./media/bark.wav"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    }
  }
}